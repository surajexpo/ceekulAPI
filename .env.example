# Server Configuration
PORT=1003
BASE_URL=http://localhost:1003

# Database
DB_URI=mongodb://localhost:27017/your_database_name

# JWT Configuration
ACCESS_TOKEN_SECRET=your_jwt_secret_here

# Session
SESSION_SECRET=your_session_secret_here

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# SMS Service - MSG91 (optional - if not set, OTPs will be logged to console)
MSG91_AUTH_KEY=your_msg91_auth_key
MSG91_FLOW_ID=your_msg91_flow_id

# SMTP Email Configuration (for password reset emails)
SMTP_EMAIL=your_smtp_email
SMTP_PASSWORD=your_smtp_password

# Default Admin Credentials (created on first startup if no admin exists)
DEFAULT_ADMIN_NAME=Admin
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_NUMBER=0000000000
DEFAULT_ADMIN_PASSWORD=changeme123
